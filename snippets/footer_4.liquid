
<footer class="page-footer variant4 fullboxed">
    <div class="footer-top bg"  data-bg="{{ "footer_bg_parallax.jpg" | asset_url}}">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <!-- newsletter -->
                    <div class="newsletter variant3">
                        <div class="footer-logo">
                            {% include 'footer-logo' %}
                        </div>
                        <div>
                            {% include 'newsletter' %}
                        </div>
                    <!-- /newsletter -->
                    </div>
                 </div>
                {% if settings.news_yes %}
                <div class="col-md-3">
                    <h3>{{ settings.news_title }}</h3>
                    {% capture news_blog_id %}{{ settings.latest_news_id }}{% endcapture %}
                    {% if news_blog_id != blank %}
                    <div class="news-carousel">
                    {% for article in blogs[news_blog_id].articles limit:3 %}
                    <div class="news-item">
                        <div class="news-date">{{ article.published_at | date: format: 'month_day_year' }}</div>
                        <h4 class="news-title"><a href="{{ article.url }}">{{ article.title }}</a></h4>
                        <div class="news-text">
                            <p>{{ article.excerpt  | strip_html | truncatewords: 20 }}</p>
                            <p><a href="{{ article.url }}" class="readmore">{{ 'blogs.article.read_more' | t }}</a></p>
                        </div>
                    </div>
                    {% endfor %}
                    </div>
                    {% else %}
                       choose News blog category -> Footer -> Footer 4 -> Choose new category
                    {% endif %}
                </div>
                {% endif %}
                {% if settings.twitter_yes %}
                <div class="col-md-3">
                    <h3>{{ settings.twitter_title }}</h3>
                   {{ settings.twitter_code }}
                </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="footer-middle">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-lg-3">
                    <div class="footer-block  collapsed-mobile">
                        {{ settings.footer_2_col_1 }}
                    </div>
                </div>
                <div class="col-md-3 col-lg-3">
                    <div class="footer-block  collapsed-mobile">
                        {{ settings.footer_2_col_2 }}
                    </div>
                </div>
                <div class="col-md-3 col-lg-3">
                    <div class="footer-block  collapsed-mobile">
                        {{ settings.footer_2_col_3 }}
                    </div>
                </div>
                <div class="col-md-3 col-lg-3">
                    <div class="footer-block  collapsed-mobile">
                        {{ settings.footer_2_col_4 }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-bot">
        <div class="container">
            <div class="row">
                <div class=" col-md-12 col-lg-12">
                    <div class="footer-copyright text-center"> &copy; {{ settings.copyright }} </div>
                    {% if settings.footer_show_methods_of_payment %}
                        <div class="footer-payment-link  text-center">
                            <a><img src="{{ 'icon-pay-1.png' | asset_url }}" alt=""></a>
                            <a><img src="{{ 'icon-pay-2.png' | asset_url }}" alt=""></a>
                            <a><img src="{{ 'icon-pay-3.png' | asset_url }}" alt=""></a>
                            <a><img src="{{ 'icon-pay-4.png' | asset_url }}" alt=""></a>
                            <a><img src="{{ 'icon-pay-5.png' | asset_url }}" alt=""></a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</footer>